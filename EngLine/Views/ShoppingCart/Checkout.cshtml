@model EngLine.Models.Course;

<div style="background-color: #6b2dae; width: 100%; height: 93px;"></div>
<form asp-action="Checkout" method="post">
	<section style="background-color: #eee;">
		<div class="container py-5">
			<div class="row d-flex justify-content-center">
				<div class="col-md-12 col-lg-10 col-xl-8">
					<div class="card">
						<div class="card-body p-md-5">
							<div>
								<h4>Thông tin đơn mua</h4>
							</div>

							<div class="px-3 py-4 border border-primary border-2 rounded mt-4 d-flex justify-content-between">
								<div class="d-flex flex-row align-items-center">
									<img src="@Model.CoverPhoto" class="rounded" width="60" />
									<div class="d-flex flex-column" style="margin-left: 12px;">
										<span class="h5">@Model.CourseName</span>
										<span class="small text-muted">@Model.Teacher.FirstName</span>
									</div>
								</div>
								<div class="d-flex flex-row align-items-center">
									<sup class="dollar font-weight-bold text-muted">VND</sup>
									<span class="h2 mx-1 mb-0">@Model.Price.ToString("#,##0")</span>
								</div>
							</div>

							<div class="my-3 pb-4">
								<h4 class="mt-5">Phương thức thanh toán</h4>
								@foreach (var item in ViewBag.paymentMethod)
								{
									<div class="form-check">
										<input value="@item.Id" asp-route-paymentMethodId="@item.Id" id="@item.Name" name="paymentMethodId" type="radio" class="form-check-input">
										<label class="form-check-label" for="@item.Name">@item.Name</label>
									</div>
								}
							</div>
							<button type="submit" asp-route-amount="@Model.Price" asp-route-courseId="@Model.Id" class="btn btn-primary btn-block btn-lg">
								Thanh toán <i class="fas fa-long-arrow-alt-right"></i>
							</button>
						</div>
					</div>
				</div>
			</div>
	</section>
</form>