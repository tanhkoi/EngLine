@using Microsoft.AspNetCore.Identity
@using EngLine.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
	@if (User.IsInRole("Student"))
	{
		<a id="manage" class="login popup-with-form" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-user"></i></a>
	}
	<form id="logoutForm" class="login popup-with-form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
		<button id="logout" type="submit" class="btn btn-light">Đăng xuất<i style="color: black !important; margin-left: 12px !important;" class="fa-solid fa-right-from-bracket"></i></button>
	</form>
}
else
{
	<a class="login popup-with-form" id="register" asp-area="Identity" asp-page="/Account/Register"><span>Đăng ký</span></a>
	<a class="login popup-with-form" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="fa-solid fa-right-to-bracket"></i><span>Đăng nhập</span></a>
}
