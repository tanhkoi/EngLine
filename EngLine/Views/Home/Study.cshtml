@model EngLine.ViewModels.CourseViewModel;

<div class="course-details">
	<h1>@Model.CourseName</h1>
	<img src="@Model.CoverPhoto" alt="@Model.CourseName" />
	<p>@Model.Description</p>
</div>

<div class="lessons">
	<h2>Lessons</h2>
	@foreach (var lesson in Model.Lessons)
	{
		<div class="lesson">
			<h3>@lesson.Name</h3>
			<p>@lesson.Description</p>
			@if (!string.IsNullOrEmpty(lesson.Photo))
			{
				<img src="@lesson.Photo" alt="@lesson.Name" />
			}
			@if (!string.IsNullOrEmpty(lesson.Video))
			{
				<video controls>
					<source src="@lesson.Video" type="video/mp4" />
					Your browser does not support the video tag.
				</video>
			}
			<div>@Html.Raw(lesson.Content)</div>
		</div>
	}
</div>
