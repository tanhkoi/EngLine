				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		@if (TempData["OrderSuccessMessage"] != null)
		{
			<text>
				Swal.fire({
					title: "Thành công!",
					text: "Thanh toán thành công",
					icon: "success",
					confirmButtonText: "OK"
				});
			</text>
		}

		@if (TempData["OrderFailedMessage"] != null)
		{
			<text>
				Swal.fire({
					title: "Opps...!",
					text: "Thanh toán thất bại",
					icon: "error",
					confirmButtonText: "OK"
				});
			</text>
		}
	</script>
}