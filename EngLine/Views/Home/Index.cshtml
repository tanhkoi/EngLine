@using System.Globalization
<!-- slider_area_start -->
<div class="slider_area ">
	<div class="single_slider d-flex align-items-center justify-content-center slider_bg_1">
		<div class="container">
			<div class="row align-items-center justify-content-center">
				<div class="col-xl-6 col-md-6">
					<div class="illastrator_png">
						<img src="~/img/banner/edu_ilastration.png" alt="">
					</div>
				</div>
				<div class="col-xl-6 col-md-6">
					<div class="slider_info">
						<h3>
							Learn your <br>
							Favorite Course <br>
							From Online
						</h3>
						<a asp-area="default" asp-action="Courses" asp-controller="Home" class="boxed_btn">Khám phá các khóa học</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- slider_area_end -->
<!-- about_area_start -->
<div class="about_area">
	<div class="container">
		<div class="row">
			<div class="col-xl-5 col-lg-6">
				<div class="single_about_info">
					<h3>
						Hơn 100 bài hướng dẫn <br>
						từ 20 khóa học
					</h3>
					<p>
						Chúng tôi cung cấp hơn 100 bài hướng dẫn từ 20 khóa học khác nhau,
						giúp bạn nâng cao kiến thức và kỹ năng.
						Hãy khám phá các khóa học đa dạng của chúng tôi và bắt đầu hành trình học tập của bạn ngay hôm nay!
					</p>
					<a href="#" class="boxed_btn">Enroll a Course</a>
				</div>
			</div>
			<div class="col-xl-6 offset-xl-1 col-lg-6">
				<div class="about_tutorials">
					<div class="courses">
						<div class="inner_courses">
							<div class="text_info">
								<span>20+</span>
								<p> Khóa học</p>
							</div>
						</div>
					</div>
					<div class="courses-blue">
						<div class="inner_courses">
							<div class="text_info">
								<span>123</span>
								<p> Giờ</p>
							</div>

						</div>
					</div>
					<div class="courses-sky">
						<div class="inner_courses">
							<div class="text_info">
								<span>230+</span>
								<p> Bài học</p>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- about_area_end -->
<!-- popular_courses_start -->
<div class="popular_courses">
	<div class="container">
		<div class="row">
			<div class="col-xl-12">
				<div class="section_title text-center mb-100">
					<h3>Khóa học phổ biến</h3>
					<p>
						Các khóa học có lượt mua nhiều nhất
					</p>
				</div>
			</div>
		</div>
	</div>
	<div class="all_courses">
		<div class="container">
			<div class="tab-content" id="myTabContent">
				<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
					<div class="row">

						@foreach (var item in ViewBag.PopularCourses)
						{
							<div class="col-xl-4 col-lg-4 col-md-6">
								<div class="single_courses">
									<div class="thumb">
										<a asp-route-id="@item.Id" asp-area="default" asp-action="CourseDetails" asp-controller="Home">
											<img src="@item.CoverPhoto" alt="">
										</a>
									</div>
									<div class="courses_info">
										<span>@item.Teacher.FirstName @item.Teacher.LastName</span>
										<h3>
											<a asp-route-id="@item.Id" asp-area="default" asp-action="CourseDetails" asp-controller="Home">
												@item.CourseName
											</a>
										</h3>
										<div class="star_prise d-flex justify-content-between">
											<div class="star">
												<i class="fa-solid fa-star"></i>
												<span>(4.5)</span>
											</div>
											<div class="prise">
												<span class="offer">$89.00</span>
												<span class="active_prise">
													@item.Price.ToString("C", CultureInfo.CreateSpecificCulture("vi-VN"))
												</span>
											</div>
										</div>
									</div>
								</div>
							</div>
						}
						<div class="col-xl-12">
							<div class="more_courses text-center">
								<a href="#" class="boxed_btn_rev">Xem thêm</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- popular_courses_end-->