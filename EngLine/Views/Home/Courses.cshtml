@model IEnumerable<EngLine.Models.Course>;

<!-- bradcam_area_start -->
<div class="bradcam_area breadcam_bg overlay2">
	<h3>Các Khóa Học</h3>
</div>
<!-- bradcam_area_end -->
<!-- popular_courses_start -->
<div class="popular_courses plus_padding">
	<div class="container">
		<div class="row">
			<div class="col-xl-12">
				<div class="section_title text-center mb-100">
					<h3>Khóa học phổ biến</h3>
					<p>
						Các khóa học phổ biến <br>
						dành cho bạn
					</p>
				</div>
			</div>
		</div>
	</div>
	<div class="all_courses">
		<div class="container">
			<div class="tab-content" id="myTabContent">
				<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
					<div class="row">
						@* style="justify-content: space-between !important;"*@
						@if (Model != null)
						{
							@foreach (var item in Model)
							{
								<div class="col-xl-4 col-lg-4 col-md-6">
									<div class="single_courses">
										<div class="thumb">
											<a asp-route-id="@item.Id" asp-area="default" asp-action="CourseDetails" asp-controller="Home">
												<img src="@item.CoverPhoto" alt="@item.CoverPhoto">
											</a>
										</div>
										<div class="courses_info">
											<span>@item.Teacher.FirstName</span>
											<h3>
												<a asp-route-id="@item.Id" asp-area="default" asp-action="CourseDetails" asp-controller="Home">
													@item.CourseName
												</a>
											</h3>
											<div class="star_prise d-flex justify-content-between">
												@* <div class="star">
										<i class="flaticon-mark-as-favorite-star"></i>
										<span>(4.5)</span>
										</div> *@
												<div class="prise">
													<span class="offer">$89.00</span>
													<span class="active_prise">
														@item.Price.ToString("#,##0") VND
													</span>
												</div>
											</div>
										</div>
									</div>
								</div>
							}
						}
					</div>
					<div class="col-xl-12">
						<div class="more_courses text-center">
							<a href="#" class="boxed_btn_rev">Xem thêm</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- popular_courses_end-->