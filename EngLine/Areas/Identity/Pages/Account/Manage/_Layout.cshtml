@{
	Layout = null;
}

<!--Css here-->
<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/owl.carousel.min.css">
<link rel="stylesheet" href="~/css/magnific-popup.css">
<link rel="stylesheet" href="~/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/themify-icons.css">
<link rel="stylesheet" href="~/css/nice-select.css">
<link rel="stylesheet" href="~/css/flaticon.css">
<link rel="stylesheet" href="~/css/gijgo.css">
<link rel="stylesheet" href="~/css/animate.css">
<link rel="stylesheet" href="~/css/slicknav.css">
<link rel="stylesheet" href="~/css/style.css">

<header>
	<div class="header-area ">
		<div id="sticky-header" class="main-header-area">
			<div class="container-fluid p-0">
				<div class="row align-items-center no-gutters">
					<div class="col-xl-1 col-lg-1">
						<div class="logo-img">
							<a asp-action="Index" asp-controller="Home">
								<img style="height: 50px !important;" src="/img/logo/png/logo-no-background.png" alt="">
							</a>
						</div>
					</div>
					<div class="col-xl-7 col-lg-7">
						<div class="main-menu  d-none d-lg-block">
							<nav>
								<ul id="navigation" style="margin-left: 65px;">
									<li><a asp-area="default" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
									<li><a asp-area="default" asp-controller="Home" asp-action="Courses">Khóa học</a></li>
									@* <li>
									@Html.ActionLink("Pages", "", "Home", null, new { @class = "ti-angle-down" })
									<ul class="submenu">
									<li>@Html.ActionLink("course details", "CourseDetails", "Home")</li>
									<li>@Html.ActionLink("elements", "Elements", "Home")</li>
									</ul>
									</li> *@
									<li><a asp-area="default" asp-controller="Home" asp-action="About">Về chúng tôi</a></li>
									<li><a asp-area="default" asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
									@{
										if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
										{
											<li><a asp-area="Teacher" asp-controller="Manage" asp-action="Profile">Quản lý(GV)</a></li>
										}
									}
								</ul>
							</nav>
						</div>
					</div>

					<div class="col-12">
						<div class="mobile_menu d-block d-lg-none"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>

<div style="background-color: #6b2dae; width: 100%; height: 93px;"></div>
<section class="bg-light py-3 py-md-5 py-xl-8">

	<div class="container">
		<div class="row" style="padding-bottom: 32px !important; margin-left: -50px !important;">
			<div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
				<a asp-action="Index" asp-controller="Home" asp-area="default">
					@* <img style="height: 50px !important;" src="/img/logo/png/logo-black-removebg.png" alt=""> *@
				</a>
			</div>
		</div>
	</div>

	<div class="container">

		<div class="row gy-4 gy-lg-0">

			<div class="col-12 col-lg-4 col-xl-3">
				<div class="row gy-4">
					@* Thẻ Profile *@
					<div class="col-12">
						<div class="card widget-card border-light shadow-sm">
							<div class="card-header text-bg-primary">Xin chào, @User.Identity.Name</div>
							<div class="card-body">
								<div class="text-center mb-3">
									<img src="/img/team/user-icon-removebg.png" class="img-fluid rounded-circle" alt="@User.Identity.Name">
								</div>
								<h5 class="text-center mb-1">@User.Identity.Name</h5>
							</div>
						</div>
					</div>
					@* Thẻ liên kết mạng xã hội *@
					<div class="col-12">
						<div class="card widget-card border-light shadow-sm">
							<div class="card-header text-bg-primary">Tài khoản mạng xã hội</div>
							<div class="card-body">
								<a href="#!" class="d-inline-block bg-dark link-light lh-1 p-2 rounded">
									<i class="bi bi-youtube"></i>
								</a>
								<a href="#!" class="d-inline-block bg-dark link-light lh-1 p-2 rounded">
									<i class="bi bi-twitter-x"></i>
								</a>
								<a href="#!" class="d-inline-block bg-dark link-light lh-1 p-2 rounded">
									<i class="bi bi-facebook"></i>
								</a>
								<a href="#!" class="d-inline-block bg-dark link-light lh-1 p-2 rounded">
									<i class="bi bi-linkedin"></i>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>

			@* Nội dung chính *@
			<div class="col-12 col-lg-8 col-xl-9">
				<div class="card widget-card border-light shadow-sm">
					<div class="card-body p-4">
						@* Thanh navbar *@
						<partial name="_ManageNav" />
						@* Nội dung bên trong *@
						<div class="tab-content pt-4" id="profileTabContent">
							@RenderBody()
						</div>
					</div>
				</div>
			</div>

		</div>

	</div>

</section>

<script src="https://unpkg.com/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/imagesloaded.pkgd.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
@RenderSection("Scripts", required: false)