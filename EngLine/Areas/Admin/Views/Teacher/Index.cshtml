@model IEnumerable<TeacherViewModel>

<style>
	.profile-image {
		height: 50px;
		width: 50px; /* Ensures the image is a perfect square */
		object-fit: cover; /* Ensures the image covers the entire area */
		border-radius: 50%; /* Makes the image circular */
	}
</style>

<h1>Danh sách tài khoản giáo viên</h1>
<div class="card-body">
	<div class="table-responsive">
		<table class="table table-bordered" id="dataTable">
			<thead>
				<tr>
					<th>
						Ảnh đại diện
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Email)
					</th>
					<th>
						Họ và tên
					</th>
					<th>
						Số điện thoại
					</th>
					<th>
						Mô tả bản thân
					</th>
					<th>
						Khả dụng?
					</th>
					<th>
						Chức năng
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							<img src="@item.Photo" alt="@item.FirstName" class="profile-image">
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Email)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.PhoneNumber)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Description)
						</td>
						<td>
							@if (item.IsActive == true)
							{
								<p>Có</p>
							}
							else
							{
								<p>Không</p>
							}
						</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i></a> |
							<a asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>