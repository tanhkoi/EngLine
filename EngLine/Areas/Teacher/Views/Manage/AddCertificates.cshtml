@model EngLine.Models.TeacherCertificate

@{
    ViewData["Title"] = "AddCertificates";
}

<h1>AddCertificates</h1>

<h4>TeacherCertificate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCertificates">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
